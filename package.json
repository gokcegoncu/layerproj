  "author": "CBS Team",
  "license": "MIT",
  "dependencies": {
    "leaflet": "^1.9.4",
    "leaflet-draw": "^1.0.4",
    "leaflet.heat": "^0.2.0",
    "proj4": "^2.9.2",
    "proj4leaflet": "^1.0.2",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "terser": "^5.44.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
